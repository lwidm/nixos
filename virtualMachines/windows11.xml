      </source>
    </hostdev>
    <hostdev mode='subsystem' type='usb'>
      <source>
        <vendor id='0b00'/>
        <product id='0483'/>
      </source>
    </hostdev>
    <hostdev mode='subsystem' type='usb'>
      <source>
