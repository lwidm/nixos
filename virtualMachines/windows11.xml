<domain type="kvm">
  <name>windows11</name>
  <memory unit='GiB'>32</memory>
  <vcpu placement='static'>4</vcpu>

  <!-- Enable Hyper-V enlightenments -->
  <features>
    <hyperv>
      <relaxed state='on'/>
      <vapic state='on'/>
      <spinlocks state='on' retries='8191'/>
    </hyperv>
  </features>

  <os>
    <type arch='x86_64' machine='pc-q35-7.2'>hvm</type>
    <loader readonly='yes' type='pflash'>/usr/share/OVMF/OVMF_CODE.fd</loader>
    <boot dev='cdrom'/>
  </os>

  <devices>
    <!-- Storage Devices -->
    <disk type='file' device='cdrom'>
      <driver name='qemu' type='raw'/>
      <source file='/path/to/virtio-win.iso'/>
      <target dev='sdb' bus='sata'/>
      <readonly/>
    </disk>

    <disk type='file' device='cdrom'>
      <driver name='qemu' type='raw'/>
      <source file='/var/lib/libvirt/images/Win11_24H2_EnglishInternational_x64.iso'/>
      <target dev='sda' bus='sata'/>
      <readonly/>
    </disk>

    <disk type='file' device='disk'>
      <driver name='qemu' type='qcow2'/>
      <source file='/var/lib/libvirt/images/windows11.qcow2'/>
      <target dev='vda' bus='virtio'/>
    </disk>

    <!-- Network -->
    <interface type='network'>
      <source network='default'/>
      <model type='virtio'/>
    </interface>

    <!-- GPU Passthrough -->
	<!-- GPU -->
	<hostdev mode='subsystem' type='pci' managed='yes'>
		<source>
			<address domain='0x0000' bus='0x29' slot='0x00' function='0x0'/>
		</source>
	</hostdev>
	<!-- Audio -->
	<hostdev mode='subsystem' type='pci' managed='yes'>
		<source>
			<address domain='0x0000' bus='0x29' slot='0x00' function='0x1'/>
		</source>
	</hostdev>
	<!-- USB Controller -->
	<hostdev mode='subsystem' type='pci' managed='yes'>
		<source>
			<address domain='0x0000' bus='0x29' slot='0x00' function='0x2'/>
		</source>
	</hostdev>
	<!-- USB Type-C UCSI Controller -->
	<hostdev mode='subsystem' type='pci' managed='yes'>
		<source>
			<address domain='0x0000' bus='0x29' slot='0x00' function='0x3'/>
		</source>
	</hostdev>


    <!-- TPM (Trusted Platform Module) -->
    <tpm model='tpm-crb'>
      <backend type='emulator' version='2.0'/>
    </tpm>

    <!-- Input Devices -->
    <input type='tablet' bus='usb'/>
    <input type='keyboard' bus='usb'/>

    <!-- USB Devices -->
    <hostdev mode='subsystem' type='usb'>
      <source>
        <vendor id='8087'/>
        <product id='0029'/>
      </source>
    </hostdev>
    <hostdev mode='subsystem' type='usb'>
      <source>
        <vendor id='0bda'/>
        <product id='9210'/>
      </source>
    </hostdev>
    <hostdev mode='subsystem' type='usb'>
      <source>
        <vendor id='1462'/>
        <product id='7b85'/>
      </source>
    </hostdev>
    <hostdev mode='subsystem' type='usb'>
      <source>
        <vendor id='0b00'/>
        <product id='5483'/>
      </source>
    </hostdev>
    <hostdev mode='subsystem' type='usb'>
      <source>
        <vendor id='0bda'/>
        <product id='5483'/>
      </source>
    </hostdev>
    <hostdev mode='subsystem' type='usb'>
      <source>
        <vendor id='3434'/>
        <product id='0821'/>
      </source>
    </hostdev>
    <hostdev mode='subsystem' type='usb'>
      <source>
        <vendor id='0424'/>
